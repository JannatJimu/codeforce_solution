import java.util.Scanner;
public class Main {
 
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner in = new Scanner (System.in);
        long  n;
        n=in.nextLong();
        int count =0;
       while(n!=0)
       {
           if(n%10==4 ||n%10==7)
           {
               count++;
           }
          n= n/10;
       }
        
        if(count ==4|| count ==7)
        {
            System.out.println("YES");
        }
        else 
        {
            System.out.println("NO");
        }
        
        
    }
    
}
